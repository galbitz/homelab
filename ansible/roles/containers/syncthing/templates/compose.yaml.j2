--- 
# yaml-language-server: $schema=https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json
networks:
    {{ containers_syncthing_docker_network }}:
        external: true
services:
    syncthing:
        image: lscr.io/linuxserver/syncthing:2.0.11
        container_name: syncthing
        hostname: syncthing-container
        environment:
        - TZ=America/Toronto
        volumes:
        - "{{ containers_syncthing_dir }}/config:/config"
        - "{{ containers_notes_storage_dir }}:/notes"
        restart: always
        networks:
        - {{ containers_syncthing_docker_network }}
#        ports:
#        - 8384:8384
#        - 22000:22000/tcp
#        - 22000:22000/udp
#        - 21027:21027/udp
        labels:
        - "traefik.enable={{ containers_syncthing_enable_traefik | default(true) }}"
        - "traefik.docker.network={{ containers_syncthing_docker_network }}"
        - "traefik.http.services.syncthing.loadbalancer.server.port=8384"
        - "traefik.http.services.syncthing.loadbalancer.server.scheme=http"
        - "traefik.http.routers.syncthing-http.entrypoints=web"
        - "traefik.http.routers.syncthing-https.entrypoints=websecure"
        - "traefik.http.routers.syncthing-https.tls=true"

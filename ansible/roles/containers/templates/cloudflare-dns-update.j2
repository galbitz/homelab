#!/bin/sh
apk --no-cache add curl
curl -s -X PUT "https://api.cloudflare.com/client/v4/zones/{{ cloudflare_zone_id }}/dns_records/{{ cloudflare_home_record_id }}" -H "X-Auth-Email:{{ cloudflare_email }}" -H "Authorization: Bearer {{cloudflare_api_token}}" -H "Content-Type: application/json" --data "{\"id\":\"{{ cloudflare_home_record_id }}\",\"type\":\"A\",\"name\":\"{{ cloudflare_home_record_content }}\",\"content\":\"`curl -sS https://ifconfig.co`\"}"

providers:
  docker:
    # -- (Optional) Enable this, if you want to expose all containers automatically
    exposedByDefault: false
    defaultRule: 'Host(`{{ "{{" }} .ContainerName {{ "}}" }}.{{ containers_traefik_main_domain }}`)'
  file:
    filename: /etc/traefik/dynamic_conf.yaml
    watch: true

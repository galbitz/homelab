{
  "packages": [
    "ansible@latest",
    "ansible-lint@latest",
    "yamllint@latest",
    "terraform@latest"
  ],
  "shell": {
    "init_hook": ["echo 'Welcome to devbox!' > /dev/null"],
    "scripts": {
      "lint": ["yamllint .", "ansible-lint"],
      "install-requirements": [
        "ansible-galaxy install -r playbooks/roles/requirements.yml --force"
      ]
    }
  }
}
